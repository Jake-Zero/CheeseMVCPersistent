@model List<CheeseMVC.Models.Cheese>

@{
    ViewData["Title"] = "Cheese Index";
}

<h1>My Cheeses</h1>

@if (Model.Count == 0)
{
    <p>No cheeses yet.</p>
}

<form method="post">
    <table class="table">
        <tr>
            <th>Remove</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
        </tr>
        @foreach (var cheese in Model)
        {
            <tr>
                <td><input type="checkbox" name="cheese_remove" value="@cheese.ID"/></td>
                <td>@cheese.Name</td>
                <td>@cheese.Description</td>
                <td>@cheese.Category.Name</td>
            </tr>
        }
    </table>
    <p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>
    <input type="submit" value="Remove"/>
</form>